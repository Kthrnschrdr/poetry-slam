<div class="font-effect-anaglyph">Listing slams</div>

<table>
  <tr>
    <th>Master</th>
    <th>Name</th>
    <th>Event date</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @slams.each do |slam| %>
  <tr>
    <td><%= slam.master_id %></td>
    <div class="font-effect-anaglyph"><td><%= slam.name %></td></div>
    <td><%= slam.event_date %></td>
    <td><%= slam.description %></td>
    <td><%= link_to 'Show', slam %></td>
    <td><%= link_to 'Edit', edit_slam_path(slam) %></td>
    <td><%= link_to 'Destroy', slam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

