<div class="form_field">
  <%= form_for @poet, :html => {:multipart => true} do |f| %>
    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.file_field :photo %><br />
    </div>
    <div class="field">
      <%= f.label :remote_photo_url, "or photo URL" %><br />
      <%= f.text_field :remote_photo_url %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>