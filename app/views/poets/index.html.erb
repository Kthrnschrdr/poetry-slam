<div class="font-effect-anaglyph">All poets</div>

<table>
  <tr>
    <th>Name</th>
    <th>Photo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @poets.each do |poet| %>
  <tr>
    <td><%= poet.name %></td>
    <div class="photo"><td><%= image_tag(poet.photo_url) if poet.photo?%></td></div>
    <td><%= link_to 'Show', poet %></td>
    <td><%= link_to 'Edit', edit_poet_path(poet) %></td>
    <td><%= link_to 'Destroy', poet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

